<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorControlHighlight">@color/colorControlHighlight</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
    </style>

    <style name="EggTextViewStyle">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/transition_egg</item>
    </style>

    <style name="TextViewStyle" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/font_family_tmoney_round_wind</item>
        <item name="android:textColor">@color/colorTextViewDefault</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="ButtonStyle" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:fontFamily">@font/font_family_tmoney_round_wind</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorEggOrange</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="colorControlActivated">@color/colorTextInputEditTextColor</item>
    </style>

    <style name="FontCookieRunRegular">
        <item name="android:fontFamily">@font/cookie_run_regular</item>
    </style>

    <style name="RadioButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:buttonTint">@color/colorEggOrange</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/FontCookieRunRegular</item>
        <item name="android:textColor">@color/colorTextInputEditTextColor</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>